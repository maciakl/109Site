#!/usr/bin/env ruby

compile '/**/*.html' do
  layout '/default.*'
end

compile '/**/*.haml' do
  filter :haml
  layout '/default.*'
end

route '/**/*.{html,haml}' do
  if item.identifier =~ '/**/index.*'
    item.identifier.without_ext + '.html'
  else
    item.identifier.without_ext + '/index.html'
  end
end

compile '/**/*' do
  write item.identifier.to_s
end

layout '/**/*', :erb
